@page
@model Reframe.Web.Pages.Auth.ChangePasswordModel
@{

    ViewData["Title"] = Localizer.Text("Change password");
}
<form asp-page-handler="CreateNewPassword" class="p-3">
    <div class="form-group">
        <label asp-for="NewPassword">@ViewData["Title"]</label>
        <input type="password" asp-for="NewPassword" class="form-control" />
    </div>

    <div class="d-flex justify-content-end my-2">
        <button type="submit" class="btn btn-outline-primary">@Localizer.Text("Change")</button>
    </div>
</form>